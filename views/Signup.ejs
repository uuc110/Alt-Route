<!-- Driver Sign-up Form -->
<div class="container driver-signup">
    <div class="card">
        <div class="form">
            <div class="left-side">
                <div class="left-heading">
                    <div class="Logo-sep">
                        <h3>RouteSync</h3>
                        <div class="DriverUser"></div>
                    </div>
                </div>
                <div class="steps-content">
                    <h3>Step <span class="step-number">1</span></h3>
